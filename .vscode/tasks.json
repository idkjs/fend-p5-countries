{
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [
        "--no-color"
    ],
    "tasks": [
		{
			"taskName": "js",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "sass",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "watch",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "lint",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "clean",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
			"taskName": "copy",
			"isBuildCommand": true,
			"showOutput": "always"
		},
		{
            "taskName": "default",
            "isBuildCommand": true,
            "showOutput": "always"
        }
	]
}